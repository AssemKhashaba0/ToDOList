<div class="container mt-5">
    <h2><i class="fas fa-plus-circle"></i> Create New</h2>
    <form action="/ToDoItems/CreateNew" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label"><i class="fas fa-user"></i> Name</label>
            <input type="text" class="form-control" id="name" name="Title" >
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"><i class="fas fa-file-alt"></i> Description</label>
            <input type="text" class="form-control" id="description" name="Description" >
        </div>
        <div class="mb-3">
            <label for="deadline" class="form-label"><i class="fas fa-calendar-alt"></i> DeadLine</label>
            <input type="datetime-local" class="form-control" name="Dateline" id="deadline">
        </div>
        <!-- حقل رفع الملفات -->
        <div class="mb-3">
            <label for="formFile" class="form-label"><i class="fas fa-upload"></i> Upload File</label>
            <input class="form-control" type="file" name="fileName" id="formFile">
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check-circle"></i> Create
        </button>
    </form>
</div>